<h1>Edition</h1>
<p>Poids original :  <%= @weight_entry.weight%> </p>
<p>Date original : <%= @weight_entry.date%></p>

<%= form_with(model: @weight_entry, local: true) do |form| %>
    <% if @weight_entry.errors.any? %>
        <div class="alert alert-danger">
            <h4>Erreur</h4>
            <ul>
                <% @weight_entry.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="mb-4">
        <%= form.label :weight %>
        <%= form.number_field :weight, step: "0.1", placeholder: "Entrez votre poids"%>
    </div>

    <div class="mb-4">
        <%= form.label :date %>
        <%= form.date_field :date, placeholder: "Entrez la date de votre suivi de poids"%>
    </div>

    <div class="flex justify-end">
        <%= form.submit "Enregistrer", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"%>
    </div>
<% end %>
        <%= link_to 'Retour', weight_entries_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>